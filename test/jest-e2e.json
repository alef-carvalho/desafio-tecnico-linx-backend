{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@infra(|/.*)$": "<rootDir>/../src/infra/$1",
    "@common(|/.*)$": "<rootDir>/../src/common/$1",
    "@domain(|/.*)$": "<rootDir>/../src/domain/$1",
    "@application(|/.*)$": "<rootDir>/../src/application/$1",
    "@(|/.*)$": "<rootDir>/../src/$1"
  }
}
